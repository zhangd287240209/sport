/* pages/my_course/index.wxss */
page{background-color:#fff!important;}
.searchGood .search{padding-left:30rpx;}
.searchGood .search{margin-top:20rpx;}
.searchGood .search .input{width:550rpx;background-color:#f7f7f7;border-radius:33rpx;padding:0 35rpx;box-sizing:border-box;height:66rpx;}
.searchGood .search .input input{font-size:28rpx;width:200px;}
.searchGood .search .input .placeholder{color:#bbb;}
.searchGood .search .input .iconfont{color:#000;font-size:35rpx;}
.searchGood .search .bnt{width:120rpx;text-align:center;height:66rpx;line-height:66rpx;font-size:35rpx;color:#282828;margin-right:20rpx;}
.searchGood .title{font-size:28rpx;color:#999;margin:50rpx 30rpx 25rpx 30rpx;}
.searchGood .list{padding-left:10rpx;}
.searchGood .list .item{font-size:26rpx;color:#454545;padding:0 21rpx;height:60rpx;border-radius:3rpx;line-height:60rpx;border:1rpx solid #aaa;margin:0 0 20rpx 20rpx;}
.searchGood .line{border-bottom:1rpx solid #eee;margin:20rpx 30rpx 0 30rpx;}

.joinCart{
  background:red;
  width:550rpx;
  height:80rpx;
  border-radius:50rpx;
  text-align:center;
  line-height:86rpx;
  margin:50rpx auto;
  font-size:38rpx;
  color:#fff;
  margin-left:30rpx;
  font-family:黑体;
  margin-top:-40rpx;
  background: -webkit-linear-gradient(left top, red , #fcaf17); /* Safari 5.1 - 6.0 */
}

.container{
  height:100%;
  background-color: white;
}

.btn{
  margin-top:80rpx;

}

.searchtxt{
  font-size:18px;
  margin-right:35rpx;
}

.content{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap
}

.content-item{
  height: 300rpx;
  width: 45%;
  margin: 2px;
  position: relative;
  background-color: yellow
}

.content-item image{
  width: 100%;
  height: 100%
}

.navitor{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
}